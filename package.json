{
  "name": "spotify-magician",
  "description": "A spotify playlist editor",
  "version": "0.13.1",
  "author": "Eric Lambrecht <ericlambrecht.hh@gmail.com>",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot --config webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --optimize-minimize --config webpack.prod.js",
    "commit": "git-cz",
    "lint": "eslint --ext .js,.vue src",
    "release": "standard-version -a --message \"chore(release): :bookmark: %s\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EricLambrecht/spotify-magician.git"
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "moment-duration-format": "^2.2.2",
    "spotify-web-api-js": "^1.1.0",
    "vue": "^2.5.17",
    "vue-feather-icon": "^1.2.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "commitizen": "^2.10.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "emoji-cz": "^0.3.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^4.7.1",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "markdown-loader": "^4.0.0",
    "node-sass": "^4.5.0",
    "replace": "^1.0.0",
    "sass-loader": "^7.1.0",
    "standard-version": "^4.4.0",
    "vue-loader": "^15.4.1",
    "vue-template-compiler": "^2.2.1",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/emoji-cz"
    }
  },
  "standard-version": {
    "scripts": {
      "postbump": "node scripts/writeVersionFile.js",
      "postchangelog": "replace  \"üêõ \" \"\" CHANGELOG.md&&replace \"‚ú® \" \"\" CHANGELOG.md",
      "precommit": "git add src/version.json"
    }
  }
}
