{
  "name": "spotify-magician",
  "description": "A spotify playlist editor",
  "version": "0.19.1",
  "author": "Eric Lambrecht <ericlambrecht.hh@gmail.com>",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot --config webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --optimize-minimize --config webpack.prod.js",
    "now-build": "npm run build",
    "commit": "git-cz",
    "lint": "eslint --ext .js,.vue src",
    "release": "standard-version -a --message \"chore(release): :bookmark: %s\"",
    "deploy": "now --token $NOW_TOKEN",
    "alias:dev": "now alias spotify-magician-nightly --token $NOW_TOKEN",
    "alias:prod": "now alias --token $NOW_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EricLambrecht/spotify-magician.git"
  },
  "dependencies": {
    "html-webpack-plugin": "^3.2.0",
    "laue": "^0.2.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.2.2",
    "portal-vue": "^1.5.1",
    "spotify-web-api-js": "^1.1.1",
    "vue": "^2.5.22",
    "vue-awesome": "^3.3.1",
    "vue-resize-directive": "^1.1.4",
    "vuetrend": "^0.3.2",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "commitizen": "^3.1.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "emoji-cz": "^0.3.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-vue": "^5.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "markdown-loader": "^5.0.0",
    "node-sass": "^4.11.0",
    "now": "^13.1.2",
    "replace": "^1.0.1",
    "sass-loader": "^7.1.0",
    "standard-version": "^4.4.0",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.6.2",
    "vue-template-compiler": "^2.5.22",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/emoji-cz"
    }
  },
  "standard-version": {
    "scripts": {
      "postbump": "node scripts/writeVersionFile.js",
      "postchangelog": "replace  \"üêõ \" \"\" CHANGELOG.md&&replace \"‚ú® \" \"\" CHANGELOG.md",
      "precommit": "git add src/version.json"
    }
  }
}
